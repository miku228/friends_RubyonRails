  <% notice %>
<!-- </p> -->
<% if user_signed_in? %>
  <!-- <h1>Friend List</h1> -->
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <!-- <th>First name</th>
        <th>Last name</th> -->
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <% render friend %>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
  <h1>Home</h1>
  <p>Let's make friends list with Ruby and Rails</p>
<% end %>
